<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chon lop"
            android:textSize="20sp"
            android:layout_gravity="center"
            />
        <Spinner
            android:gravity="center"
            android:layout_width="match_parent"
            android:id="@+id/spn_class_room"
            android:layout_height="50dp"></Spinner>

    </LinearLayout>
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/edt_student_name"
        android:hint="Ten sinh vien"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/edt_student_birtday"
        android:hint="Ngay sinh"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/btn_add_student"
        android:text="Them sinh vien"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector"

        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lv_list_student"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>